<resources>
    <!-- Definición del estilo de la aplicación -->
    <style name="MiTema" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Color de fondo de la barra de acción -->
        <item name="colorPrimary">#497a89</item>
        <!-- Color del texto de la barra de acción -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Color de fondo de la ventana -->
        <item name="android:windowBackground">#E2F4C5</item>
        <!-- Color de los botones -->
        <item name="colorButtonNormal">#58A399</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="MiEstiloBoton" parent="Widget.AppCompat.Button">
        <!-- Fondo del botón -->
        <item name="android:background">@drawable/mi_boton_fondo</item>
        <!-- Color del texto del botón -->
        <item name="android:textColor">#FFFFFF</item>
        <!-- Ajusta el tamaño del texto -->
        <item name="android:textSize">12sp</item>
        <!-- Ajusta el tamaño del botón -->
        <item name="android:layout_width">95dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!-- Estilo personalizado para los dialogos -->
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#A8CD9F</item>
    </style>

</resources>
