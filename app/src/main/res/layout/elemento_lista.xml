<!-- Layout para un elemento de la lista -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <!-- TextView para mostrar la descripción de la tarea -->
    <TextView
        android:id="@+id/textViewTarea"
        android:layout_width="198dp"
        android:layout_height="66dp"
        android:layout_marginLeft="60dp"
        android:padding="8dp"
        android:textSize="16sp" />

    <!-- Botón para editar la tarea -->
    <Button
        android:id="@+id/botonEditar"
        style="@style/MiEstiloBoton"
        android:layout_below="@id/textViewTarea"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-64dp"
        android:layout_marginEnd="4dp"
        android:onClick="editarTarea"
        android:text="Editar" />


    <!-- Botón para finalizar la tarea -->
    <Button
        android:id="@+id/botonFinalizar"
        style="@style/MiEstiloBoton"
        android:layout_below="@id/textViewTarea"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-25dp"
        android:layout_marginEnd="4dp"
        android:onClick="finalizarTarea"
        android:text="Finalizar" />

    <!-- ImageView para mostrar la prioridad de la tarea -->
    <ImageView
        android:id="@+id/imageViewPrioridad"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="327dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/priority" />

</RelativeLayout>
